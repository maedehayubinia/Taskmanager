<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Taskmanager.HomePage"
            FlyoutLayoutBehavior="Popover">
    

    
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu"
                     BackgroundColor="#2C3E50">
            <StackLayout Padding="20" Spacing="20">
                <Label Text="Menu" 
                       FontSize="34" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="White" 
                       Margin="0, 40, 0, 20"/>

               
                <Button Text="Home"
                        Clicked="OnHomeClicked"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50"/>

               
                <Button Text="People"
                        Clicked="OnPeopleClicked"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50"/>

               
                <Button Text="Domain"
                        Clicked="OnDomainClicked"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50"/>

                
                <Button Text="Tasks"
                        Clicked="OnTasksClicked"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50"/>

              
                <Button Text="Profile"
                        Clicked="OnProfileClicked"
                        BackgroundColor="White"
                        TextColor="#3498DB"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50">
                    <Button.ImageSource>
                        <FileImageSource File="profile_icon.png" />
                    </Button.ImageSource>
                </Button>

                
                <Button Text="Message"
                        Clicked="OnMessageClicked"
                        BackgroundColor="White"
                        TextColor="#3498DB"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50">
                    <Button.ImageSource>
                        <FileImageSource File="6225774.png" />

                    </Button.ImageSource>
                </Button>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

  
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="HomePage"
                             BackgroundColor="#ECF0F1">

                  
                    <ContentPage.ToolbarItems>
                        <ToolbarItem IconImageSource="hamburger.png" 
                            
                           
                                     Priority="0" 
                                     Order="Primary" 
                                     Clicked="OnMenuClicked"/>
                    </ContentPage.ToolbarItems>

                    <StackLayout Padding="30">
                        <Label
                            Text="Home Page"
                            TextColor="#2C3E50"
                            FontSize="36"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Margin="0, 30, 0, 60"/>

                        <Button
                            Text="People"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            CornerRadius="10"
                            HeightRequest="60"
                            Margin="0, 20, 0, 10"
                            Clicked="PeopleButton"/>

                        <Button
                            Text="Domain"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            CornerRadius="10"
                            HeightRequest="60"
                            Margin="0, 20, 0, 10"
                            Clicked="DomainButton"/>

                        <Button
                            Text="Tasks"
                            BackgroundColor="#3498DB"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            CornerRadius="10"
                            HeightRequest="60"
                            Margin="0, 20, 0, 10"
                            Clicked="TasksButton"/>
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>