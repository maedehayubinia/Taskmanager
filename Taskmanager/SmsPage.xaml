<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskmanager.SmsPage"
             Title="SmsPage"
             BackgroundColor="#DDA0DD">
    <StackLayout>
        <Label
            Text="S M S"
            FontSize="150"
            HorizontalOptions="Center"
            TextColor="White"
            Margin="0, 30, 0, 190"/>
        <Frame
            WidthRequest="250">
            <Entry
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                Keyboard="Numeric"
                FontSize="40"
                MaxLength="5"
                Placeholder="SMS Code"/>
        </Frame>
        <Label
            x:Name="timerLabel"
            Text="3:00"
            TextColor="White"
            HorizontalOptions="Center"
            Margin="0, 30, 0, 0"
            FontSize="50"/>
        
    </StackLayout>

</ContentPage>