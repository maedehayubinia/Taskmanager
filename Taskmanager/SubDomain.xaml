<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskmanager.SubDomain"
             Title="SubDomain">
    <StackLayout Padding="20">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="TaskManager" Clicked="OnTaskManagerClicked" />
            <Button Text="App" Clicked="OnAppClicked" />
        </StackLayout>

        <ScrollView>
            <StackLayout x:Name="TaskList" Margin="0,20,0,0">
                
            </StackLayout>
        </ScrollView>

        <Button Text="+" 
                BackgroundColor="#007ACC" 
                TextColor="White" 
                HorizontalOptions="End" 
                VerticalOptions="End" 
                WidthRequest="60" 
                HeightRequest="60"
                CornerRadius="30"
                Clicked="OnAddTaskClicked"/>
    </StackLayout>
</ContentPage>
   